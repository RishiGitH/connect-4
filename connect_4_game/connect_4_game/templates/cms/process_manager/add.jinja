{% extends "cms/base.jinja" %}
{% block extracss %}
{% endblock %}
{% block content %}
    {% include 'cms/header.jinja' %}
        <div class="container">
        	<div class="row">
                <form action="" method="POST" role="form" enctype="multipart/form-data" novalidate>
                    <fieldset>
                    {% csrf_token %}
                    <input type="hidden" name="added_by" id="inputAdded_by" class="form-control" value="{{ request.user.id }}">
                    <legend>Add </legend>

                    <div class="col-md-12">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="id_stream" class="col-md-2">Stream (*)</label>
                                <div class="col-sm-10">
                                </div>
                                <div class="clearfix"></div>
                            </div>

                            <div class="form-group">
                                 <label for="id_stream" class="col-md-2">Exam</label>
                                 <div class="col-sm-10">
                                     <select name="exam" class="form-control exam" id="exam">
                                        
                                     </select>
                                 </div>
                                 <div class="clearfix"></div>
                            </div>

                            <div class="form-group">
                                 <label for="id_stream" class="col-md-2">Exam Attribute</label>
                                 <div class="col-sm-10">
                                     <select name="exam_attribute" class="form-control exam_attributes" id="exam_attributes">
                                       
                                     </select>
                                 </div>
                                 <div class="clearfix"></div>
                            </div>

                            <div class="form-group">
                                 <label for="id_stream" class="col-md-2">Chapter</label>
                                 <div class="col-sm-10">
                                     <select name="chapter" class="form-control chapter" id="chapter">
                                     </select>
                                 </div>
                                 <div class="clearfix"></div>
                            </div>

                            <div class="form-group">
                                <label for="id_about" class="col-sm-2 control-label">Title (*)</label>
                                <div class="col-sm-10">
                                </div>
                                <div class="clearfix"></div>
                            </div>

                            <div class="form-group">
                                <label for="id_about" class="col-sm-2 control-label">Content (*)</label>
                                <div class="col-sm-10">
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="form-group">
                                <label for="id_about" class="col-sm-2 control-label">News</label>
                                <div class="col-sm-10">
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="form-group">
                                <label for="id_about" class="col-sm-2 control-label">Featured</label>
                                <div class="col-sm-10">
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="form-group">
                                <label for="id_about" class="col-sm-2 control-label">Announcement</label>
                                <div class="col-sm-10">
                                </div>
                                <div class="clearfix"></div>
                            </div>

                             <div class="form-group">
                                <label for="id_about" class="col-sm-2 control-label">Course</label>
                                <div class="col-sm-10">
                                </div>
                                <div class="clearfix"></div>
                            </div>

                            <div class="form-group">
                                <label for="id_about" class="col-sm-2 control-label">Featured Image</label>
                                <div class="col-sm-10">
                                </div>
                                <div class="clearfix"></div>
                            </div>

                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Submit</button>
                    </fieldset>
                </form>
        	</div>
        </div>
{% endblock %}
{% block extrascripts %}
<script>
    $('#id_stream').select2();

    jQuery(document).ready(function($) {
        $('#id_stream').trigger('change');
    });


</script>
{% endblock %}